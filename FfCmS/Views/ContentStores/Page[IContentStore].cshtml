@inherits NancyRazorViewBase<FfCmS.Model.Page<FfCmS.Model.IContentStore>>
@{
    ViewBag.Title = "title";
    Layout = "_Layout.cshtml";
}

<h1>Available Stores</h1>

<form action="/api/stores/" method="POST">
    <input type="submit" class="btn btn-primary" value="Create new store"/>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Store Id</th>
            <th>Description</th>
            <th>Store Type</th>
            <th>Default Culture</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.StoreType</td>
                <td>@item.DefaultCulture</td>
                <td>
                    <a href="@item.Id" class="btn btn-primary">View Store</a>
                </td>
            </tr>
        }
    </tbody>
</table>